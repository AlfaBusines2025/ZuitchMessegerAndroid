<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFill">

    <LinearLayout
        android:id="@+id/tabsChat"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/bg_tabs_top">

        <!-- Home (nueva) -->
        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ivHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="14dp"
                android:text="@string/Lbl_Home"
                android:textColor="@color/text_color_in_between" />
        </LinearLayout>

        <!-- Chats -->
        <LinearLayout
            android:id="@+id/llChats"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="4dp"
            android:background="@drawable/bg_tab_button"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ivChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textSize="14dp"
                android:text="@string/Lbl_Tab_Chats"
                android:textColor="@color/gnt_white" />
        </LinearLayout>

        <!-- Groups -->
        <LinearLayout
            android:id="@+id/llGroups"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ivGroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="14dp"
                android:text="@string/Lbl_Group"
                android:textColor="@color/text_color_in_between" />
        </LinearLayout>

        <!-- Archive -->
        <LinearLayout
            android:id="@+id/llArchive"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ivArchive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="14dp"
                android:text="@string/Lbl_Archive"
                android:textColor="@color/text_color_in_between" />
        </LinearLayout>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
